{
  "name": "bird-bookmarks",
  "version": "1.0.5",
  "description": "Export Twitter bookmarks to markdown with thread expansion",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "export": "bun run src/index.ts",
    "build": "bun build --compile src/index.ts --outfile birdmarks",
    "build:all": "bun run build:mac-arm64 && bun run build:mac-x64 && bun run build:linux && bun run build:windows",
    "build:mac-arm64": "bun build --compile --target=bun-darwin-arm64 src/index.ts --outfile dist/birdmarks-darwin-arm64",
    "build:mac-x64": "bun build --compile --target=bun-darwin-x64 src/index.ts --outfile dist/birdmarks-darwin-x64",
    "build:linux": "bun build --compile --target=bun-linux-x64 src/index.ts --outfile dist/birdmarks-linux-x64",
    "build:windows": "bun build --compile --target=bun-windows-x64 src/index.ts --outfile dist/birdmarks-win-x64.exe"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@steipete/bird": "^0.7.0"
  }
}
